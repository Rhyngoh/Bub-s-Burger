<div class="container">
  <div class="row">
    <div class="jumbotron">
      <h1 class="text-center">Welcome to Bub's Burger!<img src="assets/img/burger-flat.png" alt="burger logo" height="100px" width="100px"/></h1> 
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h2>Have a burger!</h2>
      <hr>
      {{#each burgers}}
      {{#unless this.devoured}}
      <p>{{this.burger_name}} <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit" class="btn btn-success" data-toggle="modal" data-target="#modalBox">Eat up!</button>
              </form> </p>
      {{/unless}}
      {{/each}}
      
    </div>
    <div class="col-md-6">
      <h2>Burgers that are eaten.</h2>
      <hr>
      {{#each burgers}}
      {{#if this.devoured}}
      <p><del>{{this.burger_name}}</del> <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button type="submit" disabled class="btn btn-danger disabled">Devoured!</button>
              </form> </p>
      {{/if}}
      {{/each}}
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-center">
      <h2>Add a Burger</h2>
      <hr>
      <form class="create-update-form" action="burgers/create" method="POST">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="burger_name">
        </div>

        <button type="submit" class="btn btn-primary">Add Burger</button>
      </form>
    </div>
  </div>
  
</div>